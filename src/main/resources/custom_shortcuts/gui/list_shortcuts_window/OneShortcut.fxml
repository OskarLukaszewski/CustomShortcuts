<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<GridPane fx:id="mainGridPane" maxHeight="100.0" minWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="98.0" minHeight="98.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="2.0" minHeight="2.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Separator prefWidth="200.0" scaleY="3.0" GridPane.rowIndex="1" />
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="230.0" minWidth="230.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="370.0" minWidth="370.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <TextField fx:id="nameTextField" editable="false" prefHeight="30.0" promptText="Name">
                     <GridPane.margin>
                        <Insets bottom="9.0" left="10.0" right="5.0" top="10.0" />
                     </GridPane.margin>
                  </TextField>
                  <TextField fx:id="parametersTextField" editable="false" prefHeight="30.0" promptText="Parameters" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="9.0" />
                     </GridPane.margin>
                  </TextField>
               </children>
            </GridPane>
            <StackPane alignment="CENTER_RIGHT" prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <TextArea fx:id="bodyTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="Body">
                     <StackPane.margin>
                        <Insets bottom="10.0" left="5.0" right="35.0" top="10.0" />
                     </StackPane.margin>
                  </TextArea>
                  <FlowPane alignment="TOP_RIGHT" maxWidth="25.0" prefHeight="200.0" prefWidth="25.0">
                     <children>
                        <Button fx:id="topButton" maxWidth="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#topButtonClick">
                           <graphic>
                              <FontAwesomeIconView fx:id="topIcon" glyphName="EDIT" scaleX="1.5" scaleY="1.5" />
                           </graphic>
                           <FlowPane.margin>
                              <Insets bottom="5.0" />
                           </FlowPane.margin>
                        </Button>
                        <Button fx:id="bottomButton" maxWidth="25.0" minWidth="25.0" mnemonicParsing="false" onAction="#bottomButtonClick">
                           <FlowPane.margin>
                              <Insets />
                           </FlowPane.margin>
                           <graphic>
                              <FontAwesomeIconView fx:id="bottomIcon" glyphName="TRASH_ALT" scaleX="1.5" scaleY="1.5" />
                           </graphic>
                        </Button>
                     </children>
                     <StackPane.margin>
                        <Insets right="5.0" top="10.0" />
                     </StackPane.margin>
                  </FlowPane>
               </children>
            </StackPane>
         </children>
      </GridPane>
   </children>
</GridPane>
